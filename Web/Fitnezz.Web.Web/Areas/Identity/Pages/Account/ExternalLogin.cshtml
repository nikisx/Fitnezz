@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h4 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h4>
<hr />

<p id="external-login-description" class="text-info">
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-field">
                <label style="font-size: 1.8rem;" asp-for="Input.Email"></label>
                <input style="width:500px" asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label style="font-size: 1.8rem;" asp-for="Input.UserName"></label>
                <input style="width:500px" asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label style="font-size: 1.8rem;" asp-for="Input.Age"></label>
                <input style="width:500px" asp-for="Input.Age" class="form-control" />
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label style="font-size: 1.8rem;" asp-for="Input.Height"></label>
                <input style="width:500px"  asp-for="Input.Height" class="form-control" />
                <span asp-validation-for="Input.Height" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label style="font-size: 1.8rem;" asp-for="Input.Weight"></label>
                <input style="width:500px" asp-for="Input.Weight" class="form-control" />
                <span asp-validation-for="Input.Weight" class="text-danger"></span>
            </div>
            <div class="input-field">
                <label style="font-size: 1.8rem;" asp-for="Input.Goal"></label>
                <input style="width:500px" asp-for="Input.Goal" class="form-control" />
                <span asp-validation-for="Input.Goal" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
