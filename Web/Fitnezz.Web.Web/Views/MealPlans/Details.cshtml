<h1 style="text-align: center">MealPLan.Name</h1>

<div style="margin-left:20%">
    @for (int i = 0; i < 3; i++)
    {

        <div class="panel-group" id="accordion_@count" style="width: 75%">
            <div class="panel panel-default" id="panel_@count">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-target="#collapseOne_@count" href="#collapseOne_@count">
                            MEal.Name - Meal.Calories: Meal.Proteins, MEal.Carbs, Meal.Fats
                        </a>
                    </h4>
                </div>
                <div id="collapseOne_@count" class="panel-collapse collapse in">
                    <div class="panel-body">
                        @for (int j = 0; j < 3; j++)
                        {
                            <p>Food.NAme   Food.Calories Food.Grams  Food.Proteins  Food.Carbs   Food.Fats <span><a style="margin-left:40% " class="btn btn-sm">Delete</a></span></p>
                            <hr />
                        }
                        
                        @*<input style="display: none" name ="mealId" value="@i"/>*@
                        <a type="submit" href="/MealPlans/CreateFood?mealId=@i" class="btn btn-warning "> Add food</a>
                        
                    </div>
                </div>
            </div>
        </div>

        count++;

    }
    
<div style="margin-left: 20%;" id="createWorkout">
