        <input name ="mealPlanId" value="2" @*model.Id*@ style="display: none" />
        <input name="mealName" type="text" style="width: 300px" placeholder="Meal name">
        <button type="submit" asp-area="" asp-controller="MealPlans" asp-action="CreateMeal" class="btn btn-warning "> Add meal</button>
    </form>
</div>

