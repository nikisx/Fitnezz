@model Fitnezz.Web.Web.ViewModels.Workouts.AddExerciseToWorkoutInputModel
    <link href="~/css/addExercise.css" rel="stylesheet" />
<link href="~/css/addExerciseMobile.css" rel="stylesheet" />

<h1 style="text-align: center">Add Exercise to @ViewBag.WorkoutName</h1>
<div style="margin-bottom: 700px">
    <form asp-controller="Workouts" asp-action="AddExerciseToWorkout" id="form" method="post">
        <div class="form-group; ">
            <div>
                <label asp-for="Name" >Name of the Exercise</label>
                <input asp-for="Name" id="nameInput" class="form-control"  placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Sets" >Sets of the Exercise</label>
                <input asp-for="Sets"  class="form-control"  placeholder="Sets">
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Reps" >Repetitions of the Exercise</label>
                <input asp-for="Reps"  class="form-control"  placeholder="Reps">
                <span asp-validation-for="Reps" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Distance" >Distance of the Exercise</label>
                <input asp-for="Distance"  class="form-control"  placeholder="Distance in meters">
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Time" >Time of the Exercise</label>
                <input asp-for="Time" class="form-control"  placeholder="Time">
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <label asp-for="Link" >Link of the Exercise</label>
            <input asp-for="Link" class="form-control" placeholder="Link">
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>
        
        <input style="display: none" asp-for="WorkoutId"/>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

