@model ProfileUpdateInputModel
<style>
    .tabs .tab a:hover, .tabs .tab a.active {
        background-color: #ec4141;
        color: #ffffff;
    }
</style>
    <h1 style="margin-left: 43%">Manage your account</h1>

    <div style="margin-left: 20%" class="row">
<div class="col-md-10"> 
   	
    <div class="tab-section">
        <div class="s12">
            <ul class="tabs">
                <li class="tab col s4"><a href="#test1" class="waves-effect waves-dark">Profile</a></li>
                <li class="tab col s4"><a class="waves-effect waves-dark active" href="#test2">Card</a></li>
                <li class="tab col s4"><a href="#test3" class="waves-effect waves-dark">Classes</a></li> 
            </ul>
        </div>
        <div id="test1" class="col s12 container">
            <form method="post" asp-action="Profile" name="sentMessage" id="contactForm" >
                <div class="input-field">
                    <label asp-for="UserName">Username</label>
                    <input asp-for="UserName" />
                    <span style="color: red" asp-validation-for="UserName"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Age">Age</label>
                    <input asp-for="Age" />
                    <span  style="color: red" asp-validation-for="Age"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Weight">Weight</label>
                    <input asp-for="Weight" />
                    <span  style="color: red" asp-validation-for="Weight"></span>
                </div>

                <div class="input-field">
                    <label asp-for="Height">Height</label>
                    <input asp-for="Height" />
                    <span  style="color: red" asp-validation-for="Height"></span>
                </div>
                <div class="input-field">
                    <label asp-for="Goal">Goal</label>
                    <input asp-for="Goal" />
                    <span  style="color: red" asp-validation-for="Goal"></span>
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-dark pull-right">Send</button><br />
            </form>
        </div>
        <div id="test2" class="col s12 container">
            CARD
        </div>
        <div id="test3" class="col s12 container">
            Classes
        </div> 
    </div>
</div>
</div>